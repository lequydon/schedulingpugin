@model SchedulingPlugIn.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Your Password";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div>
    <div>
        <img style="width: 250px;" src="~/Content/Images/Logo_MGI.png" />
        <h4>Hello! Let get's started</h4>
        <h2 style="text-align: center;">@ViewBag.Title</h2>
    </div>
    <div class="row">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
            @Html.HiddenFor(model => model.Code)
            <div class="text-form">
                <div class="form-group">
                    <div class="border-text">
                        @Html.LabelFor(m => m.Email,"Email")
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="border-text">
                        @Html.LabelFor(m => m.Password, "Password")
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", align = "right" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="border-text">
                        @Html.LabelFor(m => m.ConfirmPassword, "ConfirmPassword")
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Comfirm Password" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-12 button-login">
                    @*<input type="submit" class="btn btn-default" value="Reset" />*@
                    <button type="submit" class="btn btn-default">Reset</button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
