    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2" id="menuBar">
                <div class="menu-admin-left">
                    <button class="btn " id="btnMenu1" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                        <i class="fa fa-bars"></i>
                    </button>
                    <nav class="h-100"  id="collapseExample">
                        <ul class="">
                            <li class="@((active==1)?"active":" ")">@Html.ActionLink("Home", "Index", "Admin")</li>
                            <li class="@((active==2)?"active":" ")">@Html.ActionLink("Calendar", "CalendarPage", "Calendar")</li>
                            <li class="@((active==3)?"active":" ")">@Html.ActionLink("Manager Consultation", "ManagerConsultation", "Consultation")</li>
                            <li class="@((active==4)?"active":" ")">@Html.ActionLink("Manager Questions", "ManageQuestion", "ManageQuestion")</li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="col-md-10 content-right">
                <button class="btn btn-menu col-lg-2" id="btnMenu2">
                    <i class="fa fa-bars"></i>
                </button>
                @*<div class="col-md-10"></div>*@
                <div class="row">
                    <div class="container body-content">
                        @RenderBody()
                        <footer>
                            <p><b>MGI Management Group International, LLC</b> </p>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $('.btn-menu').click(function () {
            $("#menuBar").toggle("slow", function () {
                var x = $(this).css("display");
                if (x == "none") {
                    $('.content-right').css("width","100%");
                } else {
                    $('.content-right').css("width", "calc(100% - 260px)");
                }

            });
        })
    </script>
</body>
</html>
