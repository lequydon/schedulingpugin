@{
    string temp = ViewBag.Controller;
    int active = 0;
    if (temp == "AdminController")
    {
        active = 1;
    }
    if (temp == "CalendarController")
    {
        active = 2;
    }
    if (temp == "ConsultationController")
    {
        active = 3;
    }
    if (temp == "ManageQuestionController")
    {
        active = 4;
    }
}
