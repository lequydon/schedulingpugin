<div class="main" temp="0" style="margin-top: 25px">
    <div class="item1">
        <div class="calendar_Heatmap">
            <div id="cal-heatmap"></div>
        </div>
    </div>
    <div class="item2">
        <div class="calendar_next_consultation" style="word-wrap: break-word;">
            <h3>Next Consultation</h3>
            <div class="Next_Consultation">
                <div>Date:</div>
                <div class="Consultation_date"><span id="Consultation_date_date"></span><span id="Consultation_date_time" style="padding-left:10px"></span></div>
            </div>
            <div class="Next_Consultation">
                <div>Full Name:</div>
                <div class="Consultation_Name"></div>
            </div>
            <div class="Next_Consultation">
                <div>Email:</div>
                <div class="Consultation_email"></div>
            </div>
            <div class="Next_Consultation">
                <div>Phone Number:</div>
                <div class="Consultation_phone"></div>
            </div>
            <div class="Next_Consultation">
                <div>Contact from:</div>
                <div class="Consultation_contact"></div>
            </div>
            <a class="view_more" style="float:right;padding-right:5px;cursor:pointer">View more >></a>

        </div>
    </div>
    <div class="item3">
        <div class="calendar_analysis_consultation">
            <h3>Analysis Consultation</h3>
            <div class="Analysis_Consultation">
                <div>Total Consultation this month</div>
                <div class="Consultation_month"></div>
            </div>
            <div class="Analysis_Consultation">
                <div>Total Consultation remain</div>
                <div class="Consultation_remain"></div>
            </div>
            <div class="Analysis_Consultation">
                <div>AVG Consultation this month</div>
                <div class="AVG_Consultation_month"><span id="AVG_Consultation_month_number"></span><span>/days</span></div>
            </div>
        </div>
    </div>
    <div class="item8" style="text-align:center">
        <h3 style="opacity:0.5"> Next Consultations</h3>
    </div>
    <div class="item7" style="text-align:center">
        <h3 style="opacity:0.5"> Pending Consultations</h3>
    </div>
    <div class="item4">
        <div class="grid_PageFinish">
            <div id="grid_finish">
            </div>
        </div>
    </div>
    <div class="item5">
        <div class="grid_PageStart">
            <div id="dialog_decline">
                <div class="content-dialog-decline" style="width: 100%">
                    <div>
                        Reason<span style="color: red">*</span>
                    </div>
                    <textarea class="textareaSaved" style="width: 100%; height: 70px"></textarea>
                </div>
                <div class="fail" style="color:red;text-align:center;padding-top:4px;display:none">Reason is required</div>
                <div class="button_dialog_decline">
                    <button class="button_fromCancel">
                        <span class="fa fa-close"></span>
                        Cancel
                    </button>
                    <button class="button_fromSaved">
                        <span class="fa fa-save"></span>
                        Saved
                    </button>
                </div>
            </div>
            <div id="dialog_gridStart">           
                    <div class="dialog_page" style="word-wrap: break-word;">
                        <div class="Page1">
                            <div class="info_person" style="margin-top:10px;"><div>Full Name:</div><div class="name_popup"></div></div>
                            <div class="info_person" style="margin-top:10px;"><div>Email Address:</div> <div class="gmail_popup"></div> </div>
                            <div class="info_person" style="margin-top:10px;"><div>Phone Number:</div> <div class="phone_popup"></div></div>
                            <div class="info_person" style="margin-top:10px;"><div>Date:</div> <div class="date_popup"></div></div>
                            <div class="info_person" style="margin-top:10px;"><div>Time:</div><div class="time_popup"></div></div>
                            <div class="info_person" style="margin-top:10px;"><div>Page:</div><div class="page_popup"></div></div>
                            <div class="ques_tion"></div>

                        </div>
                        <div class="Page2">

                        </div>
                    </div>
                    <div class="page-button">

                    </div>
                    <div class="button_dialog">
                        <button class="button_fromDecline">
                            <span class="fa fa-close"></span>
                            Decline
                        </button>
                        <button class="button_fromCancel" style="display:none;" >
                            <span class="fa fa-close"></span>
                            Cancel
                        </button>
                        <button class="button_fromAccept">
                            <span class="fa fa-check"></span>
                            Accept
                        </button>
                        <button class="button_fromClose">
                            Close
                        </button>
                    </div>
            </div>
            <div id="grid_start">
            </div>
        </div>
    </div>

    <div class="item6">
        <h3 style="text-align:center;opacity:0.5">Expired Consultations</h3>
        <div class="grid_PageExpired">
            <div id="grid_Expired">
            </div>
        </div>

    </div>
</div>

