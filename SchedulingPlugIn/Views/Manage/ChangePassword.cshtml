@model SchedulingPlugIn.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Password Form</h4>
    <hr />
    @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-3 control-label" })
        <div class="col-md-9 text-pass">
            @*<div class="row">*@
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control col-12" })
            <br />
            <p style="margin-bottom:0">@Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger col-12" })</p>
            @*</div>*@
        </div>
    </div>
    <div class="form-group" style="display: flex;justify-content: center;justify-items: center;">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-3 control-label", @style = "margin: auto; " })
        <div class="col-md-9 text-pass">
            @*<div class="row">*@
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control col-12" })
            <br />
            <p style="margin-bottom:0">  @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger col-12" })</p>
            @*</div>*@
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
        <div class="col-md-9 text-pass">
            @*<div class="row">*@
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-12" })
            <br />
            <p style="margin-bottom:0"> @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger col-12" })</p>
        @*</div>*@
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change password" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

    <style>
        .text-pass {
            display: flex;
            align-items: flex-end;
        }   

        .text-pass p{
            margin-left:1em;
        }
        @@media screen and (max-width: 768px) {
            .text-pass {
                display: block;
            }

                .text-pass span {
                    margin-left: 0;
                }
        }
    </style>